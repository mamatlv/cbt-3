let currentQuestionIndex = 0;
let score = 0;
let wrongAnswers = 0;
let selectedOption = null;
let timerInterval;
const TIME_PER_QUESTION = 35; // seconds
let timeLeft = TIME_PER_QUESTION;

const quizContainer = document.getElementById('quiz-container');
const resultContainer = document.getElementById('result-container');
const questionText = document.getElementById('question-text');
const optionsContainer = document.getElementById('options-container');
const nextButton = document.getElementById('next-button');
const timeDisplay = document.getElementById('time');
const currentQuestionDisplay = document.getElementById('current-question');
const totalQuestionsDisplay = document.getElementById('total-questions');
const correctAnswersDisplay = document.getElementById('correct-answers');
const wrongAnswersDisplay = document.getElementById('wrong-answers');
const restartButton = document.getElementById('restart-button');

totalQuestionsDisplay.textContent = questions.length;

function startTimer() {
    clearInterval(timerInterval); // Clear any existing timer
    timeLeft = TIME_PER_QUESTION;
    timeDisplay.textContent = timeLeft;

    timerInterval = setInterval(() => {
        timeLeft--;
        timeDisplay.textContent = timeLeft;
        if (timeLeft <= 0) {
            clearInterval(timerInterval);
            moveToNextQuestion();
        }
    }, 1000);
}

function loadQuestion() {
    selectedOption = null;
    optionsContainer.innerHTML = '';
    nextButton.disabled = true; // Disable next button until an option is selected
    nextButton.textContent = 'Soal Selanjutnya'; // Reset button text

    if (currentQuestionIndex < questions.length) {
        startTimer();
        const questionData = questions[currentQuestionIndex];
        questionText.textContent = questionData.question;
        currentQuestionDisplay.textContent = currentQuestionIndex + 1;

        questionData.options.forEach(option => {
            const button = document.createElement('button');
            button.textContent = option;
            button.addEventListener('click', () => selectOption(button, option));
            optionsContainer.appendChild(button);
        });
    } else {
        showResult();
    }
}

function selectOption(button, option) {
    // Remove 'selected' class from all options
    Array.from(optionsContainer.children).forEach(btn => {
        btn.classList.remove('selected');
    });

    // Add 'selected' class to the clicked option
    button.classList.add('selected');
    selectedOption = option;
    nextButton.disabled = false; // Enable next button
}

function moveToNextQuestion() {
    clearInterval(timerInterval); // Stop timer for current question

    if (selectedOption === questions[currentQuestionIndex].answer) {
        score++;
    } else {
        wrongAnswers++;
    }

    currentQuestionIndex++;
    loadQuestion();
}

function showResult() {
    quizContainer.style.display = 'none';
    resultContainer.style.display = 'block';
    correctAnswersDisplay.textContent = score;
    wrongAnswersDisplay.textContent = wrongAnswers;
}

function restartQuiz() {
    currentQuestionIndex = 0;
    score = 0;
    wrongAnswers = 0;
    selectedOption = null;
    quizContainer.style.display = 'block';
    resultContainer.style.display = 'none';
    loadQuestion();
}

nextButton.addEventListener('click', moveToNextQuestion);
restartButton.addEventListener('click', restartQuiz);

// Initial load
loadQuestion();
